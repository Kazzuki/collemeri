<h1> 本投投稿ページ </h1>

<%= form_with model: @book, url: books_url, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "〇〇の本"%>
  </div>
  <div class="form-group">
    <%= f.label :publisher %>
    <%= f.text_field :publisher, class: "form-control", placeholder: "〇〇社"%>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <%= f.submit "投稿" %>
<% end %>
